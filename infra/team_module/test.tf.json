{
    "terraform": {
        "required_providers": {
            "docker": {
                "source": "kreuzwerker/docker",
                "version": ">= 2.13.0"
            }
        }
    },
    "resource": {
        "docker_image": {
            "nginx": {
                "name": "nginx:latest",
                "keep_locally": true
            }
        },
        "docker_container": {
            "nginx": {
                "image": "${docker_image.nginx.latest}",
                "count": "4",
                "name": "test${count.index}_${module.network_mod.network_name}",
                "ports": {
                    "internal": 80
                },
                "networks_advanced": {
                    "name": "${module.network_mod.network_name}"
                }
            }
        }
    },
    "module": {
        "network_mod": {
            "source": "./network_module"
        }
    }
}